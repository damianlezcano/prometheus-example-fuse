<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
			http://www.springframework.org/schema/beans 
			http://www.springframework.org/schema/beans/spring-beans.xsd
			http://camel.apache.org/schema/spring
			http://camel.apache.org/schema/spring/camel-spring.xsd">

	<camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">

		<restConfiguration bindingMode="auto" component="servlet" />

		<rest>
			<post consumes="application/json" produces="text" uri="/say" type="java.lang.String" outType="java.lang.String">
				<param name="body" required="true" type="body" />
				<to uri="direct:route-1" />
			</post>
		</rest>

		<route id="route-1">
			<from uri="direct:route-1" />
			<log message="## process route 1 ${body}"/>
		    <to uri="direct:route-2" />
		</route>

		<route id="route-2">
			<from uri="direct:route-2" />
			<log message="## process route 2 ${body}"/>
		    <transform>
		      <simple>Hello ${body}</simple>
		    </transform>
		</route>
		
	</camelContext>

</beans>